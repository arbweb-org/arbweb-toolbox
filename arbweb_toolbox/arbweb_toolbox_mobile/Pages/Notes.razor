@code{
    DateTime r_random_date(){
        Random l_rnd = new Random();
        int l_mnt = l_rnd.Next(-10, 0);
        int l_day = l_rnd.Next(-10, 0);
        int l_hur = l_rnd.Next(-10, 0);
        int l_min = l_rnd.Next(-10, 0);

        return DateTime.Now.AddMonths(l_mnt).AddDays(l_day).AddHours(l_hur).AddMinutes(l_min);
    }
}